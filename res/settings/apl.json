{
  "1": {
    "type": "Alexa.Presentation.APL.RenderDocument",
    "version": "1.0",
    "theme": "dark",
    "mainTemplate": {
      "description": "Samurai Chef GUI",
      "parameters": [
        "payload"
      ],
      "items": [
        {
          "type": "Container",
          "width": "100%",
          "height": "100%",
          "alignItems": "center",
          "justifyContent": "center",
          "items": [
            {
              "type": "Image",
              "source": "${payload.templateData.backgroundImage}",
              "position": "absolute",
              "width": "100vw",
              "height": "100vh",
              "scale": "fill"
            },
            {
              "type": "Text",
              "color": "${viewport.shape == 'rectangle' ? '#FFFFFF' : 'transparent'}",
              "text": "${payload.templateData.title}",
              "position": "absolute",
              "bottom": "${viewport.shape == 'rectangle' ? '8%' : '35%'}",
              "fontSize": "${viewport.height > 601 ? '28dp' : '24dp'}"
            }
          ]
        }
      ]
    }
  },
